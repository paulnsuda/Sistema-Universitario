// prisma/schema_profesores.prisma

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@prisma/client-profesores"
}

datasource db {
  provider = "postgresql"
  // Recuerda: La URL se inyecta desde prisma.config.profesores.ts
}

model Profesor {
  id_profesor        Int               @id @default(autoincrement())
  nombres            String
  apellidos          String
  cedula             String            @unique
  email              String            @unique

  // --- CAMPOS NUEVOS OBLIGATORIOS ---
  tipo_contrato      String            @default("TIEMPO_COMPLETO") 
  activo             Boolean           @default(true)
  // ----------------------------------
  
  titulos            Titulo[]
  materias_asignadas ProfesorMateria[]

  @@map("profesores")
}

model Titulo {
  id_titulo           Int       @id @default(autoincrement())
  nombre_titulo       String
  universidad_emisora String?
  fecha_obtencion     DateTime? @db.Date

  id_profesor         Int
  profesor            Profesor  @relation(fields: [id_profesor], references: [id_profesor], onDelete: Cascade)

  @@map("titulos")
}

model ProfesorMateria {
  id          Int      @id @default(autoincrement())
  id_profesor Int
  profesor    Profesor @relation(fields: [id_profesor], references: [id_profesor])
  
  // Relación externa lógica (ID)
  id_materia  Int

  @@map("profesor_materia")
}